# Subnet Scout Environment Configuration Template
# Copy this file to .env and fill in your actual API keys

# ====================================
# REQUIRED API KEYS FOR PRODUCTION
# ====================================

# Anthropic Claude API Key
# Get from: https://console.anthropic.com/
# Used for: AI analysis, enhanced scoring, fallback operations
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# io.net API Key (Primary AI Provider - Hackathon Compliant)
# Get from: https://cloud.io.net/
# Used for: Primary AI operations, distributed processing, model inference
IONET_API_KEY=your_ionet_api_key_here

# GitHub API Token
# Get from: https://github.com/settings/tokens
# Permissions needed: public_repo, read:org, read:user
# Used for: Repository activity monitoring, development metrics
GITHUB_TOKEN=your_github_token_here

# Telegram Bot Token
# Get from: @BotFather on Telegram
# Used for: Multi-platform access, notifications, bot interactions
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# TaoStats API Credentials
# Get from: https://taostats.io/api
# Used for: Real Bittensor subnet data, network statistics
TAOSTATS_API_USERNAME=your_taostats_username
TAOSTATS_API_SECRET=your_taostats_secret_key

# ====================================
# OPTIONAL SERVICES
# ====================================

# Database Configuration (Optional - falls back to in-memory)
DATABASE_URL=postgresql://username:password@localhost:5432/subnet_scout
DB_HOST=localhost
DB_PORT=5432
DB_NAME=subnet_scout
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Redis Configuration (Optional - falls back to in-memory cache)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ====================================
# APPLICATION CONFIGURATION
# ====================================

# Development Settings
NODE_ENV=development
PORT=8080
VITE_BACKEND_URL=http://localhost:8080

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Force mock API usage (for development/testing)
VITE_USE_MOCK_API=false

# API Rate Limiting
API_RATE_LIMIT=100
COMPUTE_RATE_LIMIT=20

# ====================================
# EXTERNAL SERVICE URLS
# ====================================

# TaoStats API Endpoints
TAOSTATS_V1_URL=https://api.taostats.io/api/dtao/pool/history/v1

# Kaito Yaps API (Optional)
KAITO_YAPS_API_URL=https://api.kaito.ai

# Ethos Network API (Optional)
ETHOS_API_URL=https://api.ethos.network